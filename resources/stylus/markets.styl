.app-content
  display: flex;
  flex-direction: column;
  align-items: center;

.container
  width: 95%

.filter-container
  display: flex;
  align-items: flex-end;

.markets-container
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;

.marketcard
  width: 100%
  margin-bottom: 20px

.marketcard-subtitle, .marketcard-warning
  max-width: 100%;
  display: flex;
  flex-direction: column;
  span
    margin-right: 20px
    white-space: nowrap;
    color: gray_color

.marketcard-warning span
  font-size: 12px

.marketcard-predictions
  display: flex;
  flex-direction: column;

  .marketcard-predictions__choices
    display: flex;
    align-items: flex-end;
    a
      color: dark_color

  h5
    margin-right: 20px

  h5, p
    margin-bottom: 0

@media(min-width: tablet_break)
  .marketcard
    width: 49%;
    margin-right: 2%
    &:nth-child(2n)
      margin-right: 0
@media(min-width: desktop_break)
  .container
    width: 80%
  .marketcard
    width: 32%;
    margin-right: 2%
    &:nth-child(2n)
      margin-right: 2%
    &:nth-child(3n)
      margin-right: 0
