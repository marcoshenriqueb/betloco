.app-content
  display: flex;
  flex-direction: column;
  align-items: center;

.container
  width: 95%

.filter-container
  display: flex;
  align-items: flex-end;

.markets-container
  column-count: 1;
  column-gap: 5px;

.marketcard
  break-inside: avoid;
  display: inline-block;
  margin: 0 0 5px;

.marketcard-subtitle, .marketcard-warning
  max-width: 100%;
  display: flex;
  flex-wrap: wrap;
  span
    margin-right: 20px
    white-space: nowrap;
    color: gray_color

.marketcard-warning span
  font-size: 12px

.marketcard-predictions
  display: flex;
  flex-direction: column;

  .marketcard-predictions__choices
    display: flex;
    align-items: flex-end;
    a
      color: dark_color

  h5
    margin-right: 20px

  h5, p
    margin-bottom: 0

@media(min-width: tablet_break)
  .markets-container
    column-count: 2;
@media(min-width: desktop_break)
  .container
    width: 80%
  .markets-container
    column-count: 3;
