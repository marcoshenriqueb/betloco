.appbar
  background-color: primary_color
  height: 64px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 8px 0 20px
  box-shadow: rgba(0, 0, 0, 0.117647) 0px 1px 6px, rgba(0, 0, 0, 0.117647) 0px 1px 4px
  z-index: 1100
  border-bottom: 1px solid light_gray_color

.appbar-logo
  font-size: 28px
  font-family: title_font
  letter-spacing: 0px
  font-weight: 600
  margin: 0

.appbar-nav
  color: white_color
  display: flex;
  align-items: center;
  font-weight: 700

.appbar-nav__info-container
  font-size: 14px
  display: flex;
  align-items: center;

.appbar-nav__info
  display: flex;
  margin-right: 20px;

  span
    margin-right: 10px
    display: none;

.appbar-nav__info-holder
  border-radius: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0px 8px
  background-color: success_color
  color white_color

.appbar-nav__info-warning .appbar-nav__info-holder
  background-color: warning_color

.appbar-nav__list
  display: flex;
  align-items: center;
  margin: 0

  &>li
    display: flex;
    position: relative;
    align-items: center;
    padding: 10px 10px
    margin: 0
    transition: all 300ms ease
    border-radius: 2px
    &:last-child
      margin-right: 0
    &:first-child
      margin-left: 0

.appbar-nav__dropdown
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: -109px
  right: 14px
  z-index: 100
  padding: 0
  background-color: white_color
  color: primary_color
  box-shadow: rgba(0, 0, 0, 0.217647) 0px 5px 10px, rgba(0, 0, 0, 0.217647) 0px 5px 8px
  &::after
    content: ''
    position: absolute;
    top: -8px
    right: 1px
    height: 0px
    width: 0px
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 8px solid white_color
  li
    padding: 15px 20px 15px 15px
    &:hover
      background-color: rgba(0, 0, 0, 0.0980392);

@media(min-width:tablet_break)
  .appbar
    padding: 0 5%
  .appbar-nav__info-container
    margin-right: 40px;
    span
      display: block;

  .appbar-logo
    font-size: 38px
