@import "./var.styl"
@import "./base.styl"
@import "./header.styl"
@import "./top.styl"
@import "./what.styl"

.how-section
  min-height: 100vh

#how-1 img
  height: 300px
  width: auto;
  margin-bottom: 40px

.how-btn
  font-weight: bold;
  font-size: 22px
  height: 80px
  min-width: 313px

.how-section__step
  width: 100%
  display: flex;
  flex-direction: column;
  align-items: center;

.how-section__content__item
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

.how-section__content
  width: 90%
  display: flex;
  justify-content: space-around;
  &.yes
    .how-section__content__lead-text.color, #how-amount
      color: successcolor
  &.no
    .how-section__content__lead-text.color, #how-amount
      color: warningcolor

#how-2
  display: none;

  .how-section__content
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
#how-amount
  font-size: 50px
  font-weight: 300;
  width: 150px
  margin-bottom: 10px

.how-section__content__lead-text
  font-weight: 300;
  color: primarycolor
  &.big
    font-size: 50px
    line-height: 60px
  &.x-big
    font-size: 60px
    line-height: 70px
  &.weight
    font-weight: 600;
