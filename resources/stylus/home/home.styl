.quote-section
  width: 100%
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient( rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8) ), url("../img/man-top-mountain.jpg");
  background-position:center center;
  background-size: cover;
  text-align: center;
  padding: 50px 25px

  .quote-section__subtitle
    color: white
    margin-bottom: 30px
    font-size: 22px

@media(min-width:tabletbreak)
