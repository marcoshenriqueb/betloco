@import "./var.styl"
@import "./base.styl"

header{
  position: absolute;
  top: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 18px;
  z-index: 1000
}
header ul{
  display: flex;
  list-style-type: none;
  padding: 0;
  margin: 0;
}
header a{
  color:topsectioncolor;
  text-decoration: none;
  padding: 8px 60px;
  height: 100%;
  border-right: 1px dashed topsectioncolor;
  transition: all 600ms ease;
}
header a:hover{
  background-color: secondarycolor;
  color: white;
}
header a:first-child{
  border-left: 1px dashed topsectioncolor;
}
.top-section{
  color: topsectioncolor;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-image: url("../img/ecailles.png");
  background-repeat: repeat;
  height: 100%;
  width: 100%;
  position: relative;
}
.top-section__drawings
  position: absolute;
  bottom 5%
  height: 50%
  &.left
    left: 2%
  &.right
    right: 2%
#guroo{
  font-size: 42px;
  font-weight: 300;
  min-height: 63px
  margin-bottom: 5%
  margin-top: 12%;
  width: 830px
}
.logo{
  height: 200px;
  margin-bottom: 50px;
