.screenshot1
  border-radius: 5px
  box-shadow: shadow
  margin: 30px

.section-content .collapsible
  width: 70%

.what-section__content
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20px

.what-section__content__item
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 250px
  text-align: center;
  margin-bottom: 50px
  img, p
    width: 80%
    height: auto;
  .entertainment
    margin-bottom: -20px
  .interaction
    height: 150px
    width: auto;
@media(min-width:tabletbreak)
  .what-section__content
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-around;
    margin-top: 50px

  .what-section__content__item
    margin-bottom: 100px
