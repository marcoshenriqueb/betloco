@import "./var.styl"
@import "./base.styl"
@import "./header.styl"
@import "./top.styl"
@import "./what.styl"


#how-1 img
  height: 250px
  width: auto;
  margin-bottom: 40px

.how-btn
  font-weight: bold;
  min-width: 227px
  margin-bottom: 15px

.how-section__step
  width: 100%
  display: flex;
  flex-direction: column;
  align-items: center;

.how-section__content__item
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

.how-section__content
  width: 90%
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  &.yes
    .how-section__content__lead-text.color, #how-amount
      color: successcolor
  &.no
    .how-section__content__lead-text.color, #how-amount
      color: warningcolor

#how-2, #how-3
  display: none;

  .how-section__content
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
#how-amount
  font-size: 40px
  font-weight: 300;
  width: 100px
  margin-bottom: 10px

.how-section__content__lead-text
  font-weight: 300;
  color: primarycolor
  &.big
    font-size: 30px
    line-height: 40px
  &.x-big
    font-size: 30px
    line-height: 40px
  &.weight
    font-weight: 600;

.how-section__content2
  display: flex;
  flex-direction: column;
  width: 80%
  justify-content: space-around;

@media(min-width:tabletbreak)
  #how-1 img
    height: 300px
    width: auto;

  .how-btn
    font-size: 22px
    height: 80px
    min-width: 313px

  .how-section__content
    flex-direction: row;

  #how-amount
    font-size: 50px
    width: 150px

  .how-section__content__lead-text
    &.big
      font-size: 50px
      line-height: 60px
    &.x-big
      font-size: 60px
      line-height: 70px

  .how-section__content2
    flex-direction: row;
