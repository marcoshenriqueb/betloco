*{
  box-sizing: border-box;
}
html, body{
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}
body{
  font-family: 'Open Sans', sans-serif;
}

.section
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px 20px 20px

.section-title
  color titlecolor
  font-size: 32px
  font-family: titlefont

.section-description
  color primarycolor
  font-size: 15px
  text-align: center;
  margin-bottom: 30px

.section-content
  display: flex;
  width: 100%

@media(min-width:desktopbreak)
  .section
    padding: 0 8% 40px 8%
  .section-title
    font-size: 36px
  .section-description
    font-size: 16
