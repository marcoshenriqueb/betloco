*{
  box-sizing: border-box;
}
html, body{
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}
body{
  font-family: 'Open Sans', sans-serif;
}

button
  font-weight: bold;
  min-width: 227px

.section
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px 20px 20px

.gray
  background-color: #fcfcfc

.section-title
  text-align: center;
  color titlecolor
  font-size: 42px
  font-family: titlefont

.section-subtitle
  font-size: 28px
  margin-top: 30px
  margin-bottom: 0
  font-family: titlefont

.section-description
  color primarycolor
  font-size: 16px
  text-align: center;
  margin-bottom: 30px

.section-content
  display: flex;
  width: 100%
  justify-content: space-around;

@media(min-width:desktopbreak)
  .section
    padding: 0 8% 40px 8%
  .section-title
    font-size: 48px
