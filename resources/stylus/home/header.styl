header
  position: absolute;
  top: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  z-index: 1000

.header-nav
  display: flex;
  list-style-type: none;
  padding: 0;
  margin: 0;

.header-nav__item
  color:topsectioncolor;
  text-decoration: none;
  padding: 8px 15px
  height: 100%;
  border-right: 1px dashed topsectioncolor;
  transition: all 600ms ease;
  position: relative;
  &:first-child
    border-left: 1px dashed topsectioncolor;
  &:hover
    background-color: secondarycolor;
    color: white;
  .dropdown
    position: absolute;
@media(min-width:638px)
  .header-nav__item
    padding: 8px 30px;

@media(min-width:desktopbreak)
  .header-nav__item
    padding: 8px 60px;
