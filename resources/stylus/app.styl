dark_color = rgba(0,0,0,.88)
gray_color = rgba(0,0,0,.541176)
light_gray_color = #FAFAFA
white_color = #FFF
primary_color = #607D8B
success_color = #00BCD4
warning_color = #ff4081
tablet_break = 768px
desktop_break = 1280px

@font-face
   font-family Banda
   src url('../fonts/regular.otf')
   font-weight: 400;

*
  box-sizing: border-box;

body
  background-color: light_gray_color
  font-family: 'Open Sans', sans-serif

h2
  font-size: 28px

h3
  font-size: 24px

.subtitle
  color: gray_color

.error-warning
  color: white_color;
  font-weight: 600;
  font-size: 13px;
  margin-bottom: 0
  padding: 5px 25px
  background-color: warning_color;
  border-radius: 2px
  margin: 0 12px

.warning
  color: gray_color
  font-size: 13px;
  margin-bottom: 0
  padding: 5px 25px

@import "./appbar.styl"
@import "./profile.styl"
@import "./markets.styl"
@import "./orderrequest.styl"
@import "./orderbook.styl"
@import "./orderdialog.styl"
@import "./loader.styl"
