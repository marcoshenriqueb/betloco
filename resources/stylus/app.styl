dark_color = rgba(0,0,0,.88)
gray_color = rgba(0,0,0,.60)
light_gray_color = #FAFAFA
white_color = #FFF
primary_color = #3E4EB8

*
  box-sizing: border-box;

body
  background-color: light_gray_color

.app-content
  display: flex;
  flex-direction: column;
  align-items: center;

.container
  width: 95%

.marketcard-subtitle
  max-width: 100%;
  display: flex;
  flex-wrap: wrap;
  span
    margin-right: 20px
    white-space: nowrap;

.marketcard
  margin-bottom: 15px;

.marketcard-predictions
  display: flex;
  flex-direction: column;

  .marketcard-predictions__choices
    display: flex;
    align-items: flex-end;
  h5
    margin-right: 20px

  h5, p
    margin-bottom: 0

@media(min-width: 768px)
  .container
    width: 80%

